<style>
	
	body {
		margin: 0;
		overflow: hidden;
		width: 100%;
		height: 100vh;
		background: #333;
		background: linear-gradient(to top left, #4CB8C4 -40%, #333);
	}

	.container {
		position: absolute;
		top:0;
		bottom: 0;
		left: 0;
		right: 0;
		width: 250px;
		height: 250px;
		margin: auto;
		margin-top: 0;
	}

	.part {
		width: 250px;
		position: absolute;
	}

	.svgpath {
		fill: rgba(255,255,255,0);
		stroke: #18FFFF;
		stroke-width: 1.5px;
		stroke-dasharray: 1000;
		stroke-linecap: round;
		z-index: 2;
	}

	.svgbg {
		fill: rgba(255,255,255,0.2);
		z-index: 1;
	}

	#playload {
		animation: dash 2.5s reverse ease-in-out infinite;
	}

	@keyframes dash {
		to {
			stroke-dashoffset: 2000;
		}
	}


</style>

<div class="center" style="margin-top:10%">
	<%= link_to lobby_path(channel_name: @session.channel_name) do %>
		<button class="button button-desc button-dark button-rounded">
			<div>Click to play your video
				<span>Warning: Doing so before all channel</span> <span>users are ready will affect video performance</span>
			</div>
		</button>
	<% end %>
	<div class="clear"></div>
	<button class="button button-mini button-border button-rounded" data-toggle="modal" data-target=".bs-example-modal-lg">Click for info on phone arrangement</button>

		<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-lg">
				<div class="modal-body">
					<div class="modal-content" style="background-color:#333;">
						<div class="modal-header center">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							<h2 class="modal-title" id="myModalLabel" style="color:white;">Arranging your iPhone 6</h2>
						</div>
						<div class="modal-body center">
							<h4 style="color:white;">Two devices</h4>
							<%= image_tag("2device.png", class: "two-device") %>
						</div>
					</div>
				</div>
			</div>
		</div>
</div>

